/* dark_theme.qss */
QWidget {
    background-color: #121212;
    color: #FFFFFF;
}

QLabel {
    font-size: 14px;
    color: #E0E0E0;
}

QPushButton {
    background-color: #333333;
    color: #FFFFFF;
    border: 1px solid #444444;
    border-radius: 5px;
    padding: 8px;
}

QPushButton:hover {
    background-color: #555555;
}
